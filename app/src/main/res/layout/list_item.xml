<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@color/tan_background" />


        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:gravity = "center_vertical">


            <TextView
                android:id="@+id/miwok_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/word_color"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="lutti" /><!--Using tools namespace and using attribute
        //we can only watch the things on preview only not in real time
        // these tools are used to get some idea about the applications-->
            <TextView
                android:id="@+id/default_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="@color/word_color"
                android:textSize="18sp"
                tools:text="One" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>